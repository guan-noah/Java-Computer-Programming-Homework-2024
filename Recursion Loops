// How To Make Recursion Loops 
// 11/24/2024 

class Main {
    public static void main(String[] args) {
        Main m = new Main();
        m.run();
    }
    public void run()
    {
        String rr;
        int count = 1;
        rr = recursion(count);
          //r for recursion return 
        System.out.println(r);
    }
    public String recursion(int countIn)
    {
        String r;
        String c;
        if (countIn < 5)
        {
            //System.out.print(countIn + "\t");
                //marker of progress 
            countIn++;
                //increment countIn by 1
            c = recursion(countIn);
                // return countIn (effectively a loop)
            return c;
                //c is the count variable 
        }
        else 
        {
            r = "done";
            return r;
                //r is the return variable that we want 
        }
    }
}
